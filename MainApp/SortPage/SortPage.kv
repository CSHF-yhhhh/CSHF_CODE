<SortPage>:
    BoxLayout:
        canvas:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "./appPicture/back6.jpg"
        orientation: "vertical"
        size_hint:(1, 1)
        BoxLayout:
            size_hint:(1, 0.1)
            canvas:
                Color:
                    rgba: (0,0,0,0)
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDIconButton:
                pos_hint: {"center_y" : 0.5}
                icon: "arrow-left-bold-outline"
                on_release: root.close_event()
            MDLabel:
                text: root.text
                size_hint:(0.7, 1)
                halign: "center"
                valign: "center"
        BoxLayout:
            id: box
            size_hint:(1, 0.9)
            FloatLayout:
                MDSpinner:
                    size_hint: None, None
                    size: dp(46), dp(46)
                    pos_hint: {'center_x': .5, 'y': .25}
                    active: True
                MDLabel:
                    size_hint: 1, None
                    text: "正在加载..."
                    halign: "center"
                    pos_hint: {'center_x': .5, 'y': .05}

<Show>:
    padding: 2
    orientation: "vertical"
    canvas:
        Color:
            rgba: (0,0,0,0)
        Rectangle:
            pos: self.pos
            size: self.size
    Row:
        size_hint: (1, 0.08)
        text_1:"排名"
        text_2:"名称"
        text_3:"学习数量"
    ScrollView:
        size_hint: (1, 0.92)

        GridLayout:
            id: box
            cols: 1
            padding: 5
            row_default_height: root.height * 0.1
            size_hint: (1, None)
            height: self.minimum_height

<Row>:
    canvas:
        Color:
            rgba: (0,0,0,0)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0.88,0.88,0.88,1)
        Line:
            points:[self.pos[0],self.pos[1] + self.height, self.pos[0] + self.width,self.pos[1] + self.height]
    MDLabel:
        text: root.text_1
        font_style: "H6"
        size_hint: (0.25, 1)
        valign: "center"
    MDLabel:
        text: root.text_2
        font_style: "H6"
        size_hint: (0.45, 1)
        valign: "center"
    MDLabel:
        text: root.text_3
        font_style: "H6"
        size_hint: (0.3, 1)
        valign: "center"
    