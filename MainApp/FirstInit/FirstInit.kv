<FirstInit>:
    MDFloatLayout:
        canvas:
            Color:
                rgba: (0.95, 0.95, 0.95, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        MDGridLayout:
            cols: 1
            size_hint: (0.8, None)
            adaptive_height: True
            #orientation: "vertical"
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
            MDTextField:
                id:input
                size_hint: (0.8, None)
                hint_text: "输入用户名后开始学习"
                pos_hint: {"center_x" : 0.5}
            MDRaisedButton:
                text: "确定"
                size_hint: (0.3, None)
                on_release: root.Commit()
                pos_hint: {"center_x" : 0.5}
        