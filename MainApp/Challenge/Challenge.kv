<ClickButton>:
    height: self.width
    bg_color: app.theme_cls.primary_color
    background_color: (1, 1, 1, 0)
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

<Challenge>:
    unclick_color: app.theme_cls.primary_color
    click_color: app.theme_cls.primary_dark
    last_color: app.theme_cls.primary_light
    win: app.FinishChallenge
    MDBoxLayout:
        orientation: 'vertical'
        padding: [5,5,5,20]
        spacing: 10
        canvas:
            Color:
                rgba: (0.95, 0.95, 0.95, 1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: "./appPicture/back7.jpg"
        BoxLayout:
            size_hint:(1, 0.15)
            spacing:5
            MDIconButton:
                pos_hint: {"center_y" : 0.5}
                icon: "arrow-left-bold-outline"
                on_release: app.BackChallenge()
            Label:
                size_hint:(0.3, 1)

            MDRectangleFlatButton:
                id:righr_answer_btn
                size_hint: (0.4, 1)
                pos_hint: {"center_y": .5}
                text_color: (0.5, 0.5, 0.5, 1 )
                line_color:(0.5, 0.5, 0.5, 1 )
                text: "查看正确答案"
                on_release: root.ShowTrueWay()
            MDRectangleFlatButton:
                size_hint: (0.15, 1)
                pos_hint: {"center_y": .5}
                text_color: (0.5, 0.5, 0.5, 1 )
                line_color:(0.5, 0.5, 0.5, 1 )
                text: "刷新"
                on_release: root.Refresh()
        MDLabel:
            text: root.user_answer
            text_color: app.theme_cls.primary_color
            theme_text_color: "Custom"
            halign: "center"
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
