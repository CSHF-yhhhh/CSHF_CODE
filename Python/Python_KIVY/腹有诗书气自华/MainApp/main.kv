Screen:
    name: "Main"
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            id:toolbar
            title: '腹有诗书气自华'

        MDBottomNavigation:
            id: buttom
            MDBottomNavigationItem:
                id: record
                name: 'record'
                text: '记录'
                icon: 'align-vertical-bottom'
                on_tab_release: app.Record()

            MDBottomNavigationItem:
                id: home
                name: 'home'
                text: '主页面'
                icon: 'home-outline'

            MDBottomNavigationItem:
                id: user
                name: 'user'
                text: '用户'
                icon: 'account-outline'
                on_tab_release: app.User()