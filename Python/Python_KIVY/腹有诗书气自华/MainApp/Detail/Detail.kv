<Detail>:
    size_hint: (1, 1)
    MDBoxLayout:
        orientation: "vertical"
        size_hint: (1, 1)
        canvas:
            Color:
                rgba: (0.95, 0.95, 0.95, 1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: "appPicture/back3.jpg"
        MDBoxLayout:
            size_hint: (1, 0.1)
            MDIconButton:
                icon: "backspace-reverse-outline"
                pos_hint: {"center_y" : 0.5}
                on_release: app.CloseDetail()
            Button:
                background_color: (1,1,1,0)
                color: (1,1,1,1)
                text: "复制相关信息"
                on_release: root.CopyToClipboard()
        ScrollView:
            size_hint: (1, 0.9)
            MDGridLayout:
                size_hint: (1, None)
                id: boxs
                adaptive_height: True
                cols: 1
                spacing: 5
                padding: 5

<Content>:
    adaptive_height: True
    height: label.height
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            source: "appPicture/paper.jpg"
        
    MDLabel:
        id: label
        text_size: (self.width, None)
        height: self.texture_size[1] + 10
        padding: 10, 10
        valign: "center"
        pos_hint: {"center_y": .5}
        text: root.text
        font_style: root.font_style
        color: root.color
        markup: True
        halign: root.halign
        line_height: 1.2

<Picture>:
    cols: 1
    adaptive_height: True
    height: label.height + image.height
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            source: "appPicture/paper.jpg"
    MDLabel:
        id: label
        size_hint: (1, 0.15)
        text: "[i]\n[相关图片]:[/i]"
        line_height: 1.2
        markup: True
        font_style: "Subtitle1"
    Image:
        id:image
        size_hint: (1, 0.85)
        source: root.source
        
